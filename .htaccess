ErrorDocument 404 /xfasso/404/404.php

Options -Indexes
RewriteEngine On

# Redirect directory requests without trailing slash to 404 page
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^(.+[^/])$ %{REQUEST_URI}/ [L,R=301]

# Redirect directory requests with trailing slash to 404 page
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}index.html !-f
RewriteRule ^(.+)/$ /xfasso/404.php [L]
